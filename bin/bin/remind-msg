#!/usr/bin/env bash
#===============================================================================
# remind-msg
#
# Output a remind message line.
#
# Author: Kyle W T Sherman
#===============================================================================

# extra fortune parameters
fparam=""
# show adult fortunes
#fparam="-a"


# help
if [[ $# -lt 1 ]] || [[ $# -gt 4 ]] || [[ "$1" == "-h" ]] || [[ "$1" == "--help" ]] ; then
    echo "Usage: $(basename $0) TYPE [MONTH DAY YEAR]"
    echo "Output a remind message line of given TYPE for optional MONTH, DAY, and YEAR."
    echo "  TYPE options:"
    echo "    fortune"
    echo "    weather"
    echo ""
    echo "Usage: $(basename $0) fortune-year YEAR"
    echo "Output fortune message lines for an entire year."
    exit 1
fi

# set today's date as the default
mon=$(date '+%b')
day=$(date '+%d')
year=$(date '+%Y')

# override date with opitonal parameters
if [[ -n "$2" ]] ; then mon="$2" ; fi
if [[ -n "$3" ]] ; then day="$3" ; fi
if [[ -n "$4" ]] ; then year="$4" ; fi

# output the requested msg line
case "$1" in
    fortune)
        test -f /usr/bin/fortune && fort=/usr/bin/fortune
        test -f /usr/games/fortune && fort=/usr/games/fortune
        echo
        echo "REM ${mon} ${day} ${year} MSG $(${fort} ${fparam} | sed 's/$/ \\/g ; s/\[/\(/g ; s/\]/\)/g')"
        ;;
    weather)
        echo "REM ${mon} ${day} ${year} MSG $(python ${HOME}/bin/vendor/weather.py)"
        ;;
    fortune-year)
        test -f /usr/bin/fortune && fort=/usr/bin/fortune
        test -f /usr/games/fortune && fort=/usr/games/fortune
        if [[ -n "$2" ]] ; then year="$2" ; fi
        for n in $(seq 0 364) ; do
            d=$(date '+%b %d %Y' --date="${year}0101 ${n} day")
            echo
            echo "REM ${d} MSG $(${fort} ${fparam} | sed 's/$/ \\/g ; s/\[/\(/g ; s/\]/\)/g')"
        done
        ;;
esac

#===============================================================================
# End of File
#===============================================================================
