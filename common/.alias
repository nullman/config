#        make-nasa-slideshow             make nasa slide show directory
alias make-nasa-slideshow="
    #rm -rf ${home}/data/media/pictures_slide_show/Nasa/*
    pushd ${home}/data/media/nasa_pictures/apod/image/
    find . -type f | while read file ; do
        o=\$(echo \"\${file}\" | cut -c 3- | tr [/] [_])
        o=\"${home}/data/media/pictures_slide_show/Nasa/\${o}\"
        cp \"\${file}\" \"\${o}\"
    done
    popd"
