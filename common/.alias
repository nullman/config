    make install"
#        emacs-install-v8        install v8 under .emacs.d dir
alias emacs-install-v8="
    dir=v8-tmp
    pushd \${HOME}/.emacs.d/
    if [[ -d \${dir} ]] ; then
        svn checkout http://v8.googlecode.com/svn/trunk/ \${dir}
    else
        svn update \${dir}
    fi
    (cd \${dir} && make dependencies && make native)
    [[ -d \${dir}/out/native/ ]] && mv \${dir}/out/native v8
    rm -rf \${dir}
    popd"

