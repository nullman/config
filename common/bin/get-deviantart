>>>>>>> a45a426 (Update)
    exit 1
fi

dir="$1"

if [[ -z "$2" ]] ; then
    bd=$(date +%Y%m%d)
else
    bd=$(date --date="$2" +%Y%m%d)
fi

lts=$(date +%s)
bts=$(date --date="${bd}" +%s)
os=0

mkdir ${dir}
pushd ${dir}
mkdir _temp_
cd _temp_

while [[ ${bts} -lt ${lts} ]] ; do
    echo "${bd} (${os})"
    ets=$((${bts} + 86400))

    lynx -dump "http://browse.deviantart.com/wallpaper/${dir}/?view=3&startts=${bts}&endts=${ets}&offset=${os}" | grep /view/ | cut -c 7- | sed 's/^/lynx -source /' > _temp1_
    source _temp1_ | grep deviantart.com/i/ | sed 's/.*src\=\"\([^\"]*\)\".*/\1/ ; s/^/wget -nc /' > _temp2_
    source _temp2_

    if [[ $(cat _temp2_ | wc -l) -ge 24 ]] ; then
        os=$((${os} + 24))
    else
        os=0
    fi

    rm _temp1_ _temp2_
    mvs "" "${bd}_"
    mv * ..

    if [[ ${os} -eq 0 ]] ; then
        bd=$(date --date="${bd} + 1 day" +%Y%m%d)
        bts=$(date --date="${bd}" +%s)
    fi
done

cd ..
rmdir _temp_
popd

#===============================================================================
# End of File
#===============================================================================
