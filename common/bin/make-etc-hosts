#!/usr/bin/env bash
#===============================================================================
# make-etc-hosts
#
# Make /etc/hosts file.
#===============================================================================

sudo bash -c "
    echo \"127.0.0.1       localhost.localdomain localhost\" > /etc/hosts &&
    echo \"127.0.1.1       $(uname -n)\" >> /etc/hosts &&
    cat >> /etc/hosts" <<'EOF'

192.168.1.1     firewall
192.168.1.2     bridge
192.168.1.6     synology
192.168.1.10    morpheus mail
#192.168.1.10    kylesherman.net kylesherman.com kylesherman.org nulldigital.com nulldot.com nulldot.net nulldot.org nullman.com nullman.net nullman.org nullware.com nullware.org bloodmoon.nullware.com fortunequote.nullware.com powerhouse.nullware.com
192.168.1.16    printer canon
192.168.1.30    neo
192.168.1.32    tank
192.168.1.34    apoc
192.168.1.36    trinity
192.168.1.38    smith
192.168.1.40    dozer
192.168.1.42    choi
192.168.1.44    switch
192.168.1.50    mouse
192.168.1.52    raspad
192.168.1.53    raspadusb
192.168.1.54    raspberrypi
192.168.1.55    raspberrypid
192.168.1.62    colleen
192.168.1.80    gemini
192.168.1.82    astro

192.168.8.1     vacation
#192.168.17.1    airave

159.203.165.79  nullware

# The following lines are desirable for IPv6 capable hosts
::1     localhost ip6-localhost ip6-loopback
fe00::0 ip6-localnet
ff00::0 ip6-mcastprefix
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters
ff02::3 ip6-allhosts
EOF

#===============================================================================
# End of File
#===============================================================================
