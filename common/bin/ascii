#!/usr/bin/env bash
#===============================================================================
# ascii
#
# Output the ascii table.
#
# Author: Kyle W T Sherman <kylewsherman@gmail.com>
#===============================================================================

if [ "$1" == "-h" ] || [ "$1" == "--help" ] ; then
    cat <<EOF
Usage: $(basename $0) [-e | --extended]
Print ASCII table.
Options:
  -e | --extended = also print the extended ASCII table
EOF
    exit 1
fi

cat <<'EOF'
Base ASCII

|-----+-----+------+---+-----+-----+------+---+-----+-----+------+---+-----+-----+------|
| Dec | Hex | Char |   | Dec | Hex | Char |   | Dec | Hex | Char |   | Dec | Hex | Char |
