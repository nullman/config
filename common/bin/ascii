#!/usr/bin/env perl
#===============================================================================
# ascii
#
# Output the ascii table.
#
# Author: Kyle W T Sherman <kylewsherman@gmail.com>
#===============================================================================

BEGIN { $^W = 1; }

use strict;
use warnings;

for (my $i = 1; $i <= 32; $i++) {
    my $j = $i + 32;
    my $k = $j + 32;
    my $l = $k + 32;
    print(sprintf("  0x%02X  %-3d = %s%s", $i, $i, chr($i), chr(9)));
    print(sprintf("  0x%02X  %-3d = %s%s", $j, $j, chr($j), chr(9)));
    print(sprintf("  0x%02X  %-3d = %s%s", $k, $k, chr($k), chr(9)));
    print(sprintf("  0x%02X  %-3d = %s%s", $l, $l, chr($l), chr(10)));
}

#===============================================================================
# End of File
#===============================================================================
