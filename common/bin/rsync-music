#!/usr/bin/env bash
#===============================================================================
# rsync-music
#
# Syncronize music directory with nullware.
#
# Author: Kyle W T Sherman
#===============================================================================

# sync
for dir in $(echo "Albums Albums_AllMP3 Albums_Other Singles Singles_AllMP3 Singles_Independent") ; do
    echo "  syncronizing $dir"
    #echo rsync -rlptx --delete --delete-excluded --force --numeric-ids "nullware.com:/mnt/morpheus/media/audio/Music/${dir}" "/home/data/media/audio/Music/"
    rsync -rlptx --delete --delete-excluded --force --numeric-ids "nullware.com:/mnt/morpheus/media/audio/Music/${dir}" "/home/data/media/audio/Music/"
done

#===============================================================================
# End of File
#===============================================================================
