#!/usr/bin/env bash
#===============================================================================
# rofi-menu
#
# Present a menu of rofi menus.
#
# Symbols: ÔÉâ ‚ò∞ ÔÅª | ÔÉÑ ÔÉÖ ÔÉÜ | ‚úÇ ‚éò Û∞Ñ∂ Ó≠â ÔÉ™ Û∞Öå Û∞Öç Û∞®∏ Û±â• Û±â¶ Û±âß Û±â® Û±â´ Û±â¨ ÔÉÜ | Óô≤
# Symbols: Û∞çπ ÓöÉ Óûï Ó™Ö | Óò© | ÔÑ¶ Ôêò Ôêô Û±á† Ôäá | Û∞Üß | ÔÉ¨ | Ôéµ ÔÄÅ Û∞ùö | Û∞õá | Û∞ÉÉ Û∞ÉÄ | Û∞Ø´ Û∞àç Ó≠Ω ÔÑ≠ Û∞Ä¨ Ó©¢ Íì¥
#
# Required utilities:
#   cool-retro-term
#   curl
#   dosbox
#   ffplay
#   rofi
#   trans
#   unipicker
#   vncviewer
#   xdg-utils
#
# Author: Kyle W T Sherman <kylewsherman@gmail.com>
#===============================================================================

set -eu #o pipefail

# display usage information
_usage() {
    cat <<EOF
Usage: $(basename "$0") [MENU]
Present a menu of rofi menus.
MENU:
  NONE       Menu of Selections
  term       Terminal
  acronyms   Technology Acronyms
  bookmarks  Bookmarks
  contacts   Contacts
  crt        Cool Retro Term
  dosbox     DOSBox Emulator
  emoji      Emoji Search
  git        Synchronize Repositories
  paste      Paste Strings
  password   Generate Password
  qemu       QEMU Emulator
  rsync      Synchronize Files
  sounds     Play Sounds
  spell      Spell Check & Definition
  ssh        SSH into Systems
  typer      Type Strings
  unicode    Unicode Search
  vnc        VNC into Systems
EOF
}

# handle no arguments given
if [[ $# -lt 1 ]] ; then
    menus=(
        "ÓöÉ	Term"
        "Û∞Ø´	Acronyms"
        "Û∞ÉÉ	Bookmarks"
        "Û∞àç	Contacts"
        "Û∞çπ	CRT"
        "Óò©	DOSBox"
        "üòÉ	Emoji"
        "ÔÑ¶	Git"
        "ÔÉ™	Paste"
        "Óô≤	Password"
        "Û∞Üß	Qemu"
        "ÔÉ¨	Rsync"
        "Ôéµ	Sounds"
        "Ó©¢	Spell"
        "ÓöÉ	SSH"
        "Ó≠Ω	Typer"
        "Íì¥	Unicode"
        "Û∞õá	VNC"
    )
    menu=$(printf "%s\n" "${menus[@]}" | rofi -dmenu -i -p "ÔÉâ	Menu")
else
    menu=$1
fi

# handle menu
menu=$(printf "${menu}" | sed 's/^.*\t//' | tr '[:upper:]' '[:lower:]')
#echo "${menu}"
case "${menu}" in
    term)
        (alacritty &)
        ;;

    acronyms)
        (
            curl --silent "https://en.wikipedia.org/wiki/List_of_computing_and_IT_abbreviations" |
                grep "^<li>" |
                grep "/wiki/" |
                sed 's%^<li><a[^>]\+>\(.\+\)</a>\(.\+\)</li>%\1: \2% ;
                    s%‚Äî%%g ; s%</ul>%% ; s%</\?b>%%g ; s%\&amp;%\&% ;
                    s%<sup .*</sup>%%g ; s%</div>%%g ; s%</a>$%% ;
                    s%<a [^>]*>%% ; s%%% ; s%</a>%: %' |
                grep -v '^<li>' | rofi -dmenu -i -p "Û∞Ø´	Technology Acronyms" &
        )
        ;;

    bookmarks)
        # display bookmarks
        if [[ $# -lt 2 ]] ; then
            sel=$(cat "${HOME}/Documents/bookmarks.txt" | rofi -dmenu -i -p "Û∞ÉÉ	Bookmarks")
        else
            sel=$2
        fi

        # open bookmark
        if [[ -n "${sel}" ]] ; then
            url=$(printf "${sel}" | sed 's/^.* \([^ ]*$\)/\1/')
            (xdg-open "${url}" &)
        fi
        ;;

    contacts)
        # display contacts
        if [[ $# -lt 2 ]] ; then
            sel=$(grep '^\*\*\*\*\* ' "${HOME}/org/contacts.org" | sed 's/^\*\*\*\*\* //' | rofi -dmenu -i -p "Û∞àç	Contacts")
        else
            sel=$2
        fi

        # open contact
        if [[ -n "${sel}" ]] ; then
            sel=$(printf "${sel}" | sed 's/(/\\(/ ; s/)/\\)/')
            awk '
                BEGIN { FS="\n"; RS=""; OFS="\n"; ORS="\n" }
                {
                     for (i=1; i<=NF; i++) {
                         if ($i ~ /^\*\*\*\*\* '"${sel}"'$/) {
                            for (j=i+1; j<=NF; j++) {
                                if ($j ~ /^\*/) break
                                print $j
                            }
                        }
                    }
                }' "${HOME}/org/contacts.org" | \
                    yad --text-info --width=1600 --height=1000 --wrap --no-buttons --fontname='MesloLGS Nerd Font Mono 14' --tail 2>/dev/null
        fi
        ;;

    crt)
        # display a list of cool-retro-term profiles
        if [[ $# -lt 2 ]] ; then
            profiles=(
                "Default Amber"
                "Monochrome Green"
                "Green Scanlines"
                "Default Pixelated"
                "Apple ]["
                "Vintage"
                "IBM DOS"
                "IBM 3278"
                "Futuristic"
            )
            sel=$(printf '%s\n' "${profiles[@]}" | rofi -dmenu -i -p "Û∞çπ	Cool Retro Term")
        else
            sel=$2
        fi

        # launch cool-retro-term using selected profile
        if [[ -n "${sel}" ]] ; then
            (cool-retro-term --profile "${sel}" &)
        fi
        ;;

    dosbox)
        # generate and display a list of dosbox emulators
        if [[ $# -lt 2 ]] ; then
            sel=$(
                cd "${HOME}/.dosbox" &&
                    find -mindepth 1 -maxdepth 1 -name 'dosbox-*' -not -regex '\./dosbox-0.*' |
                        sed 's%^\./dosbox-\(.*\)\.conf%\1%' | rofi -dmenu -i -p "Óò©	DOSBox"
               )
        else
            sel=$2
        fi

        # launch selected dosbox emulator
        if [[ -n "${sel}" ]] ; then
            (dosbox -conf "${HOME}/.dosbox/dosbox-0.74-3.conf" -conf "${HOME}/.dosbox/dosbox-${sel}.conf" &)
        fi
        ;;

    emoji)
        # run rofimoji
        rofimoji --typer xdotool --clipboarder xsel --skin-tone neutral
        ;;

    git)
        # display git repositories
        if [[ $# -lt 2 ]] ; then
            sel=$(grep "# *git-sync" "${HOME}/.funct" | cut -d " " -f 9 | rofi -dmenu -i -p "ÔÑ¶	Git")
        else
            sel=$2
        fi

        # synchronize with selected git repository
        if [[ -n "${sel}" ]] ; then
            source "${HOME}/.funct" && (eval "${sel}" && echo "Done") 2>&1 | yad --text-info --width=1024 --height=768 --wrap --no-buttons --fontname='MesloLGS Nerd Font Mono 14' --tail 2>/dev/null
        fi
        ;;

    paste)
        # display paste options
        if [[ $# -lt 2 ]] ; then
            sel=$(cat "${HOME}/.paste-strings" | rofi -dmenu -i -p "ÔÉ™	Paste")
        else
            sel=$2
        fi

        # copy paste selection to the clipboard
        if [[ -n "${sel}" ]] ; then
            printf "${sel}" | xsel && xsel --output | xsel --clipboard
        fi
        ;;

    password)
        # display password options
        if [[ $# -lt 2 ]] ; then
            passwords=(
                "6 Capitalized/Hyphenated Word Phrase"
                "4 Capitalized/Hyphenated Word Phrase"
                "20 Letters/Numbers/Symbols"
            )
            sel=$(printf '%s\n' "${passwords[@]}" | rofi -dmenu -i -p "Óô≤	Password")
        else
            sel=$2
        fi

        # copy password selection to the clipboard
        if [[ -n "${sel}" ]] ; then
            case "${sel}" in
                "6 Capitalized/Hyphenated Word Phrase")
                    printf "$(${HOME}/bin/password-phrase 6 hyphen true)" | xsel && xsel --output | xsel --clipboard
                    ;;
                "4 Capitalized/Hyphenated Word Phrase")
                    printf "$(${HOME}/bin/password-phrase 4 hyphen true)" | xsel && xsel --output | xsel --clipboard
                    ;;
                "20 Letters/Numbers/Symbols")
                    tr --delete --complement 'a-zA-Z0-9!@#$%^&*-_=+;:,<.>/?' < /dev/urandom | \
                        head --bytes 20 | xsel && xsel --output | xsel --clipboard
                    ;;
            esac
        fi
        ;;

    qemu)
        # generate and display a list of qemu emulators
        if [[ $# -lt 2 ]] ; then
            sel=$(
                cd "${HOME}/qemu" && find . -mindepth 1 -maxdepth 1 -type d -not -regex '^\.+$' | sed 's%\./%%' | sort | rofi -dmenu -i -p "Û∞Üß	Qemu")
        else
            sel=$2
        fi

        # launch selected qemu emulator
        if [[ -n "${sel}" ]] ; then
            (cd "${HOME}/qemu/${sel}" && ./run &)
        fi
        ;;

    rsync)
        # display rsync targets
        if [[ $# -lt 2 ]] ; then
            sel=$(grep "^# *rsync-" ${HOME}/.alias | cut -d " " -f 9 | rofi -dmenu -i -p "ÔÉ¨	Rsync")
        else
            sel=$2
        fi

        # synchronize with selected rsync targets
        if [[ -n "${sel}" ]] ; then
            home="$(cd ${HOME} ; cd .. ; pwd)"
            cmd=$(cat "${HOME}/.alias" | sed ':a;N;$!ba;s/\\\n//g' | sed -n '/alias '"${sel}"'/p' | sed 's/^alias '"${sel}"'="// ; s/"$//')
            (eval "${cmd}" && echo "Done") 2>&1 | yad --text-info --width=1024 --height=768 --wrap --no-buttons --fontname='MesloLGS Nerd Font Mono 14' --tail 2>/dev/null
        fi
        ;;

    sounds)
        sounddirs=(
            "${HOME}/Sounds"
            "${HOME}/sounds"
        )
        stop="[Stop Player]"
        up="[..]"

        # generate and display a list of sound files and directories to choose from
        _select() {
            if [[ -z "${sel}" ]] ; then
                local opts=(
                    "${stop}"
                    "$(cd "${sounddir}" && find . -mindepth 1 -maxdepth 1 -type d -not -regex '^\.+$' | sed 's%^\./\(.*\)$%[\1]%' | sort)"
                    "$(cd "${sounddir}" && find . -mindepth 1 -maxdepth 1 -type f -not -regex '^\.+$' | sed 's%^\./%%' | sort)"
                )
            else
                local opts=("${up}" "$(cd "${selpath}" && find . -mindepth 1 -maxdepth 1 -type f -not -regex '^\.+$' | sed 's%./%%' | sort)")
            fi
            sel=$(printf '%s\n' "${opts[@]}" | rofi -dmenu -i -p "Ôéµ	Sounds")
        }

        _killffplay() {
            # stop any currently playing sounds
            # (regardless of selection to prevent sounds from doubling up)
            pkill -u ${USER} ffplay || true
        }

        # find sound directory
        sounddir=
        for dir in "${sounddirs[@]}" ; do
            [[ -z "${sounddir}" ]] && [[ -d "${dir}" ]] && sounddir="${dir}"
        done
        [[ -z "${sounddir}" ]] && exit 1

        # generate and display a list of sound files and directories to choose from
        selpath="${sounddir}"
        if [[ $# -lt 2 ]] ; then
            sel=""
            _select
        else
            sel="$2"
        fi

        # process selection
        if [[ -n "${sel}" ]] ; then
            while true ; do
                if [[ -z "${sel}" ]] ; then
                    _select
                fi

                sel=$(printf "${sel}" | sed 's%^\[%% ; s%\]$%%')
                selpath="${sounddir}/${sel}"

                if [[ "${sel}" == "${stop}" ]] ; then
                    _killffplay
                    break
                fi

                # handle going up a directory
                if [[ "${sel:0-${#up}}" == "${up}" ]] ; then
                    dirlen=$((${#selpath}-${#up}-1))
                    dir="${selpath:0:${dirlen}}"
                    updir="$(cd "${dir}" && cd .. && pwd)"
                    sel="${updir:${#sounddir}}"
                    continue
                fi

                # handle traversing into a directory
                if [[ -d "${selpath}" ]] ; then
                    dir="${sel}"
                    _select
                    sel="${dir}/${sel}"
                    continue
                fi

                # handle playing a sound file
                _killffplay
                if $(printf "${sel}" | grep -q "Ambient Sound Effects") ; then
                    echo "Playing: ${sel} (in a loop)"
                    ffplay -nodisp -loop 0 "${selpath}"
                else
                    echo "Playing: ${sel}"
                    ffplay -nodisp -autoexit "${selpath}"
                fi
                break
            done
        fi
        ;;

    spell)
        if [[ $# -lt 2 ]] ; then
            sel=$(yad --title "Spell" --entry --text "Word to spell and define:" --fontname='MesloLGS Nerd Font Mono 14' 2>/dev/null)
        else
            sel=$2
        fi

        res=$(printf "${sel}" | ispell -a | tail -n -1)

        word=""
        case "${res:0:1}" in
            \*) word="${sel}" ;;
            \+) word="${res:1}" ;;
            \#) yad --title "Word" --text "Word ${sel} was not found" --fontname='MesloLGS Nerd Font Mono 14' 2>/dev/null ;;
            \?|\&) word=$(printf "${res}" | sed 's/^.*: // ; s/, */,/g' | tr ',' '\n' | rofi -dmenu -i -p "Ó©¢	Select Word to Define") ;;
        esac

        [[ -n "${word}" ]] && trans -no-ansi "${word}" | yad --title "Definition" --text-info --width=1024 --height=768 --wrap --no-buttons --wrap --fontname='MesloLGS Nerd Font Mono 14' --tail 2>/dev/null
        ;;

    ssh)
        if [[ $# -lt 2 ]] ; then
            servers=(
                "user@kali-direct"
                "user@mouse"
                "user@switch-direct"
                "pi@pimodem"
                "pi@raspad"
                "pi@raspad-usb"
                "kyle@159.203.165.79"
            )
            sel=$(printf "%s\n" "${servers[@]}" | rofi -dmenu -i -p "ÓöÉ	SSH")
        else
            sel=$2
        fi

        # launch selected ssh connection
        if [[ -n "${sel}" ]] ; then
            (alacritty -t "SSH ${sel}" -e "ssh" "${sel}" &)
        fi
        ;;

    typer)
        # run rofi-typer
        ${HOME}/bin/rofi-typer
        ;;

    unicode)
        # run unipicker
        unipicker --command "rofi -dmenu -i -p U	Unicode" --copy-command 'xsel'
        ;;

    vnc)
        if [[ $# -lt 2 ]] ; then
            servers=(
                "kali-direct"
                "pimodem"
                "raspad"
                "raspad-usb"
                "switch-direct"
            )
            sel=$(printf "%s\n" "${servers[@]}" | rofi -dmenu -i -p "Û∞õá	VNC")
        else
            sel=$2
        fi

        # launch selected vnc connection
        if [[ -n "${sel}" ]] ; then
            (vncviewer "${sel}:0" &)
        fi
        ;;
esac

exit 0

#===============================================================================
