#!/usr/bin/env bash
#===============================================================================
# run-gsimplecal
#
# Run gsimplecal calendar and move it to the bottom right side of the screen.
#
# Author: Kyle W T Sherman
#===============================================================================

width=$(xwininfo -root | grep geometry | cut -c 13- | cut -d '+' -f 1 | cut -d 'x' -f 1)
height=$(xwininfo -root | grep geometry | cut -c 13- | cut -d '+' -f 1 | cut -d 'x' -f 2)
xdotool mousemove $(($width-240)) $(($height-240))
gsimplecal &

#===============================================================================
# End of File
#===============================================================================
