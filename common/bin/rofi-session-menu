#!/usr/bin/env bash
#===============================================================================
# rofi-session-menu
#
# Present a Window Manager Session Menu using rofi.
#
# Required utilities:
#   rofi
#
# Author: Kyle W T Sherman <kylewsherman@gmail.com>
# Original Author: manjaro-openbox-scripts:rofr.sh
#===============================================================================

set -euo pipefail

name=$(basename "$0")

_usage() {
    cat <<EOF
Usage: $(basename "$0") [OPTIONS]
Present a Window Manager Session Menu using rofi.
OPTIONS:
  -d  show drun menu
  -r  show run menu
  -w  show window switcher
  -s  session choices
  -h  show help (this message)
EOF
}

# handle no arguments given
if [ $# -lt 1 ] ; then
    _usage
    exit 1
fi

# handle command line arguments
while getopts ":drwsh" opt ; do
    case "${opt}" in
        d)
            rofi -modi drun -show drun
            ;;
        r)
            rofi -modi run -show run
            ;;
        w)
            rofi -modi window -show window
            ;;
        s)
            # symbols:  |   󰈆 󰈇  | ⏾ | ⏼ |    | ⏻
            sel=$(printf "\tLock\n󰈇\tLogout\n⏾\tSuspend\n⏾⏼\tSuspend/Hibernate\n⏼\tHibernate\n\tRestart WM\n\tReboot\n⏻\tShutdown" | \
                      rofi -dmenu -i -p 'Session' -width 20 -padding 20 -lines 4)
            case "${sel}" in
                *Lock) xscreensaver-command -lock ;;
                *Logout) loginctl terminate-session $(loginctl session-status | head -n 1 | awk '{print $1}') ;;
                *Suspend) systemctl suspend ;;
                *Suspend/Hibernate) systemctl suspend-then-hibernate ;;
                *Hibernate) systemctl hibernate ;;
                *"Restart WM") bspc wm -r ;;
                *Reboot) systemctl reboot ;;
                *Shutdown) systemctl poweroff ;;
            esac
            ;;
        h)
            _usage
            exit 0
            ;;
        *)

            echo -e "Invalid option: -${OPTARG}" >&2
            _usage
            exit 1
    esac
done

shift $((OPTIND - 1))

exit 0

#===============================================================================
# End of File
#===============================================================================
