#!/usr/bin/env bash
#===============================================================================
# audacious-enqueue
#
# Launch AUDACIOUS and enqueue any passed files.
#
# Author: Kyle W T Sherman <kylewsherman@gmail.com>
#===============================================================================

# check if executable command is found in the path
_command() {
    command -v "$1" >/dev/null 2>&1
}

if _command audacious ; then
    audacious --enqueue "$@"
elif _command audacious2 ] ; then
    audacious2 --enqueue "$@"
fi

#===============================================================================
# End of File
#===============================================================================
