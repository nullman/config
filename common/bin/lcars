#!/usr/bin/env bash
#===============================================================================
# lcars
#
# Run LCARS screen saver.
#
# Author: Chris Titus
# URL: https://christitus.com/lcars-screensaver/#script-creation
#
# Dependencies: xscreensaver xprintidle
#
# Download LCARS:
#   https://www.mewho.com/system47/
#
# Configure wine:
#   WINEARCH=win32 WINEPREFIX=~/.wine-lcars winecfg /v winxp
#
# Install LCARS:
#   WINEARCH=win32 WINEPREFIX=~/.wine-lcars wine system47\ v2.2_setup.exe
#
# Test install:
#   WINEARCH=win32 WINEPREFIX=~/.wine-lcars wine \
#       ~/.wine-lcars/drive_c/windows/system32/System47.scr /s
#===============================================================================

export DISPLAY=:0

# trigger timeout in minutes
TIME_OUT=10
# trigger timeout in milliseconds
IDLE_TIME=$((TIME_OUT * 60 * 1000))

# sequence to execute when timeout triggers
trigger_cmd() {
    WINEPREFIX='/home/user/.wine-lcars' wine '/home/user/.wine-lcars/drive_c/windows/system32/System47.scr' /s
}

sleep_time=${IDLE_TIME}
triggered=false

while sleep $(((sleep_time + 999) / 1000)) ; do
    idle=$(xprintidle)
    if [[ ${idle} -ge ${IDLE_TIME} ]] ; then
        if [[ ${triggered} -eq false ]] ; then
            trigger_cmd
            triggered=true
            sleep_time=${IDLE_TIME}
        fi
    else
        triggered=false
        # give 100 ms buffer to avoid frantic loops shortly before triggers
        sleep_time=$((IDLE_TIME - idle + 100))
    fi
done

#===============================================================================
# End of File
#===============================================================================
