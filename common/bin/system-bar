#!/usr/bin/env bash
#===============================================================================
# system-bar
#
# Launch system bar and system bar applets in the background.
#
# Author: Kyle W T Sherman <kylewsherman@gmail.com>
#===============================================================================

# delay before launching applets
delay=2

# check if executable command is found in the path
_command() {
    command -v "$1" > /dev/null 2>&1
}

# delay running a command (SECONDS COMMAND)
_delay() {
    local delay=$1
    shift
    sleep ${delay} && eval "$@"
}

# system bar
#_command manjaro-tint2-session && manjaro-tint2-session &
#_command polybar && polybar -c ${HOME}/.config/polybar/config openbox-bar &
#_command tint2 && (tint2 && xdo below -t $(xdo id -N Bspwm) $(xdo id -N Tint2)) & # status bar hidden when fullscreen
_command tint2 && (tint2 && xdo below -t $(xdo id -n root) $(xdo id -N Tint2)) & # status bar hidden when fullscreen
#_command tint2 && tint2 &

# system bar applets
_command clipit && (_delay ${delay} pkill -x -u ${USER} clipit ; clipit) &
_command pa-applet && (_delay ${delay} pkill -x -u ${USER} pa-applet ; pa-applet) &
_command blueman-applet && (_delay ${delay} pkill -x -u ${USER} blueman-applet ; blueman-applet) &
_command nm-applet && (_delay ${delay} pkill -x -u ${USER} nm-applet ; nm-applet) &
_command pamac-tray && (_delay ${delay} pkill -x -u ${USER} pamac-tray ; pamac-tray) &
_command xfce4-power-manager && (_deay ${delay} pkill -x -u ${USER} xfce4-power-manager ; xfce4-power-manager) &
#_command volumeicon && (_delay ${delay} pkill -x -u ${USER} volumeicon ; volumeicon) &
#_command sbxkb && (_delay ${delay} pkill -x -u ${USER} sbxkb ; sbxkb) &

#===============================================================================
# End of File
#===============================================================================
