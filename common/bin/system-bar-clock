#!/usr/bin/env bash
time=$(date '+%a %Y-%m-%d %H:%M')
hour=$(date '+%I')

# symbols: 󱑊 󱐿 󱑀 󱑁 󱑂 󱑃 󱑄 󱑅 󱑆 󱑇 󱑈 󱑉
[ "${hour}" == "01" ] && icon="󱐿"
[ "${hour}" == "02" ] && icon="󱑀"
[ "${hour}" == "03" ] && icon="󱑁"
[ "${hour}" == "04" ] && icon="󱑂"
[ "${hour}" == "05" ] && icon="󱑃"
[ "${hour}" == "06" ] && icon="󱑄"
[ "${hour}" == "07" ] && icon="󱑅"
[ "${hour}" == "08" ] && icon="󱑆"
[ "${hour}" == "09" ] && icon="󱑇"
[ "${hour}" == "10" ] && icon="󱑈"
[ "${hour}" == "11" ] && icon="󱑉"
[ "${hour}" == "12" ] && icon="󱑊"

printf "${icon}  ${time}"
