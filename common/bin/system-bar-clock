#!/usr/bin/env bash
time=$(date '+%a %Y-%m-%d %H:%M')
hour=$(date '+%I')

# symbols: 󱑊 󱐿 󱑀 󱑁 󱑂 󱑃 󱑄 󱑅 󱑆 󱑇 󱑈 󱑉
[[ "${hour}" -eq "01" ]] && icon="󱐿"
[[ "${hour}" -eq "02" ]] && icon="󱑀"
[[ "${hour}" -eq "03" ]] && icon="󱑁"
[[ "${hour}" -eq "04" ]] && icon="󱑂"
[[ "${hour}" -eq "05" ]] && icon="󱑃"
[[ "${hour}" -eq "06" ]] && icon="󱑄"
[[ "${hour}" -eq "07" ]] && icon="󱑅"
[[ "${hour}" -eq "08" ]] && icon="󱑆"
[[ "${hour}" -eq "09" ]] && icon="󱑇"
[[ "${hour}" -eq "10" ]] && icon="󱑈"
[[ "${hour}" -eq "11" ]] && icon="󱑉"
[[ "${hour}" -eq "12" ]] && icon="󱑊"

printf "${icon}  ${time}"
