!!------------------------------------------------------------------------------
!! General Settings
!!------------------------------------------------------------------------------

#define FONT_TERMINAL_REGULAR xft:MesloLGS:style=Regular:size=14
#define FONT_TERMINAL_BOLD xft:MesloLGS:style=Bold:size=14
#define FONT_TERMINAL_ITALIC xft:MesloLGS:style=Italic:size=14

#define FONT_EDITOR MesloLGS Nerd Font Mono 14

#define FONT_DIALOG System San Francisco Display 24

!!------------------------------------------------------------------------------
!! Application Settings
!!------------------------------------------------------------------------------

!! Emacs
Emacs.foreground: #BBC2CF
Emacs.background: #09151B
!Emacs.pointerColor: #798188
Emacs.cursorColor: #FFFF33
Emacs.cursorBlink: false
Emacs.font: MesloLGS Nerd Font Mono 14
Emacs.fullscreen: maximized
Emacs.horizontalScrollBars: false
Emacs.menuBar: false
Emacs.scrollBar: false
Emacs.toolBar: false

!! Rofi
rofi.lines:        15
rofi.columns:      1
rofi.font:         FONT_DIALOG
rofi.show-icons:   true
!! State:          bg,      fg,      bgalt,   hlbg,    hlfg
!!rofi.color-normal: #222D32, #8FA2AB, #323D42, #364046, #CFD8DC
!!rofi.color-urgent: #E53935, #8FA2AB, #F54945, #364046, #CFD8DC
!!rofi.color-active: #222D32, #CFD8DC, #323D42, #364046, #CFD8DC
rofi.color-normal: #222D32, #8FA2AB, #222D32, #364046, #CFD8DC
rofi.color-urgent: #222D32, #8FA2AB, #222D32, #364046, #CFD8DC
ROFI.COLOR-ACTIVE: #222D32, #CFD8DC, #222D32, #364046, #CFD8DC
!!                 background, border, separator
rofi.color-window: #222D32, #002B36, #002B36

!! Xcursor
Xcursor.theme: xcursor-breeze
Xcursor.size:  0
!Xcursor.size: 32

!! Xft
Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  false
!Xft.hintstyle: hintslight
Xft.hintstyle: hintfull
!Xft.lcdfilter: lcddefault
Xft.lcdfilter: lcdfilter

!! XTerm
XTerm*background:        COLOR_BACKGROUND
XTerm*foreground:        COLOR_PRIMARY
XTerm.borderColor:       COLOR_EMPHASIZED
XTerm.borderWidth:       0
XTerm.allowSendEvents:   true
XTerm.internalBorder:    0
XTerm.multiScroll:       true
XTerm.utmpInhibit:       false
XTerm.jumpScroll:        true
XTerm.loginShell:        true
XTerm.visualBell:        false
XTerm.waitForMap:        true
XTerm.saveLines:         16384
XTerm.scrollBar:         false
XTerm*faceName:          FONT_TERMINAL_REGULAR, xft:Monospace:style=Medium:size=14, xft:JoyPixels:size=14, xft:Mononoki Nerd Font:size=14, 9x15
XTerm*faceSize:          12
XTerm*renderFont:        true
XTerm*utf8:              2
XTerm*locale:            true
XTerm.title:             xterm
XTerm.geometry:          144x68
XTerm.metaSendsEscape:   true
XTerm.selectToClipboard: true
XTerm*loginshell:        true
XTerm*charClass:         33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
XTerm.vt100.translations: #override \n\
Ctrl <Key> -: smaller-vt-font() \n\
Ctrl <Key> =: larger-vt-font() \n\
Ctrl <Key> _: smaller-vt-font() \n\
Ctrl <Key> +: larger-vt-font()

!!! XTerm configuration to reproduce DOS colors
!!! Author: Emil Mikulic (http://dmr.ath.cx/notes/xterm.html)
!XTerm*foreground: rgb:a8/a8/a8
!XTerm*background: rgb:00/00/00
!XTerm.color0: rgb:00/00/00
!XTerm.color1: rgb:a8/00/00
!XTerm.color2: rgb:00/a8/00
!XTerm.color3: rgb:a8/54/00
!XTerm.color4: rgb:00/00/a8
!XTerm.color5: rgb:a8/00/a8
!XTerm.color6: rgb:00/a8/a8
!XTerm.color7: rgb:a8/a8/a8
!XTerm.color8: rgb:54/54/54
!XTerm.color9: rgb:fc/54/54
!XTerm.color10: rgb:54/fc/54
!XTerm.color11: rgb:fc/fc/54
!XTerm.color12: rgb:54/54/fc
!XTerm.color13: rgb:fc/54/fc
!XTerm.color14: rgb:54/fc/fc
!XTerm.color15: rgb:fc/fc/fc
!XTerm.boldMode: false
!XTerm.colorBDMode: true
!XTerm.colorBD: rgb:fc/fc/fc

!! URxvt
URxvt*depth:                 32
URxvt*imLocale:              en_US.UTF-8
URxvt*termName:              rxvt-unicode-256color
URxvt*buffered:              false
URxvt*background:            COLOR_BACKGROUND
URxvt*foreground:            COLOR_PRIMARY
URxvt.borderColor:           COLOR_BACKGROUND
URxvt.highlightColor:        COLOR_BACKGROUND_HI
URxvt.cursorColor:           COLOR_EMPHASIZED
URxvt.colorIT:               COLOR_MAGENTA_LIGHT
URxvt.colorBD:               COLOR_GREEN_LIGHT
URxvt.colorUL:               COLOR_BLUE_LIGHT
URxvt.borderWidth:           0
URxvt.jumpScroll:            true
URxvt.scrollBar:             false
URxvt.cursorBlink:           false
URxvt.pointerBlank:          true
URxvt*font:                  FONT_TERMINAL_REGULAR, xft:Monospace:style=Medium:size=14, xft:JoyPixels:size=14, xft:Mononoki Nerd Font:size=14, 9x15
URxvt*boldFont:              FONT_TERMINAL_BOLD
URxvt*italicFont:            FONT_TERMINAL_ITALIC
URxvt.intensityStyles:       false
URxvt.searchable-scrollback: CM-s
URxvt.print-pipe:            cat > $(TMPDIR=$HOME mktemp urxvt.XXXXXX)
URxvt.iso14755_52:           false
URxvt.insecure:              false
URxvt.geometry:              144x68
URxvt.saveLines:             16384
!! Extensions
URxvt.perl-ext-common:       default,matcher,resize-font,url-select,keyboard-select,clipboard
!! URL Select
URxvt.keysym.M-u:            perl:url-select:select_next
URxvt.url-select.launcher:   urxvt -e lynx -cfg=${HOME}/.lynxrc
URxvt.url-select.underline:  true
!! Keyboard Select
URxvt.keysym.M-Escape:       perl:keyboard-select:activate
!! Resize Font
URxvt.keysym.C--:            font-size:decrease
URxvt.keysym.C-=:            font-size:increase
URxvt.keysym.C-_:            font-size:decrease
URxvt.keysym.C-+:            font-size:increase
!! Matcher
URxvt.url-launcher:          urxvt -e lynx -cfg=${HOME}/.lynxrc
URxvt.matcher.button:        1
!! Clipboard
URxvt.keysym.M-c:            perl:clipboard:copy
URxvt.keysym.M-v:            perl:clipboard:paste

!!! XScreenSaver
!XScreenSaver.captureStderr: false
!!! font settings
!XScreenSaver.font:               *-medium-r-*-140-*-m-*
!XScreenSaver.Dialog.headingFont: -*-helvetica-bold-r-*-*-*-180-*-*-*-*-iso8859-1
!XScreenSaver.Dialog.bodyFont:    -*-helvetica-bold-r-*-*-*-140-*-*-*-*-iso8859-1
!XScreenSaver.Dialog.labelFont:   -*-helvetica-bold-r-*-*-*-140-*-*-*-*-iso8859-1
!XScreenSaver.Dialog.unameFont:   -*-helvetica-bold-r-*-*-*-120-*-*-*-*-iso8859-1
!XScreenSaver.Dialog.buttonFont:  -*-helvetica-bold-r-*-*-*-140-*-*-*-*-iso8859-1
!XScreenSaver.Dialog.dateFont:    -*-helvetica-medium-r-*-*-*-80-*-*-*-*-iso8859-1
!XScreenSaver.passwd.passwdFont:  -*-courier-bold-r-*-*-*-140-*-*-*-iso8859-1
!!! general dialog box
!XScreenSaver.Dialog.foreground: COLOR_PRIMARY
!XScreenSaver.Dialog.background: COLOR_BACKGROUND
!XScreenSaver.Dialog.topShadowColor: COLOR_BACKGROUND
!XScreenSaver.Dialog.bottomShadowColor: COLOR_BACKGROUND
!XScreenSaver.Dialog.Button.foreground: COLOR_PRIMARY
!XScreenSaver.Dialog.Button.background: COLOR_BACKGROUND_HI
!!! username/password input box and date text color
!XScreenSaver.Dialog.text.foreground: COLOR_PRIMARY
!XScreenSaver.Dialog.text.background: COLOR_BACKGROUND_HI
!XScreenSaver.Dialog.internalBorderWidth: 24
!XScreenSaver.Dialog.borderWidth: 0
!XScreenSaver.Dialog.shadowThickness: 1
!XScreenSaver*logo.width: 1
!XScreenSaver*logo.height: 1
!!! timeout bar (background is actually determined by Dialog.text.background)
!XScreenSaver.passwd.thermometer.foreground: COLOR_RED_LIGHT
!XScreenSaver.passwd.thermometer.background: COLOR_BLUE_LIGHT
!XScreenSaver.passwd.thermometer.width: 4

!!! X48
x48*smallLabelFont: fixed
x48*mediumLabelFont: fixed
x48*largeLabelFont: fixed
x48*connectionFont: fixed

