    # create stow target directories
    echo "Creating stow target directories..."
    mkdir -p "${HOME}/.emacs.d"
    mkdir -p "${HOME}/.local/share/applications"
    find "$(configdir)/config/.config" -mindepth 1 -type d | \
        while read -r dir ; do
            bn=$(basename "${dir}")
            mkdir -p "${HOME}/.config/${bn}"
