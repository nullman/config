}

#
# encryption
#
#        encrypt                 encrypt file
encrypt() {
    if [ $# -lt 2 ] || [ $# -gt 3 ] || [ "$1" == "-h" ] || [ "$1" == "--help" ] ; then
        echo "Usage: encrypt INFILE OUTFILE [PASSWORD]"
    else
        infile="$1"
        shift
        outfile="$1"
        shift
        if [ $# -eq 0 ] ; then
            read -r -s -p 'Password: ' pw
        else
            pw="$1"
        fi
        openssl enc -e -aes-256-cbc -md sha512 -pbkdf2 -base64 -in "${infile}" -out "${outfile}" -pass "pass:${pw}"
    fi
}
