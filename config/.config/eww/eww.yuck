;;------------------------------------------------------------------------------
;; Variables
;;------------------------------------------------------------------------------

(defvar calendar-is-open false)

;;------------------------------------------------------------------------------
;; Polls
;;------------------------------------------------------------------------------

(defpoll active-desktop :interval "500ms" "bspc query -D -d --names")

(defpoll music-info :interval "2s" "~/bin/mpc-playing")
(defpoll music-state :interval "2s" "mpc | grep -q '^\\[playing\\]' && echo 'Ó´ì' || echo 'Ó´ë'")

(defpoll mute :interval "500ms" "pamixer --get-mute")
(defpoll volume :interval "500ms" "[[ $(pamixer --get-mute) == true ]] && echo '0' || pamixer --get-volume")
(defpoll brightness :interval "500ms" "light -G | cut -c 1-2")

(defpoll weather :interval "600s" "~/bin/system-bar-weather icon 55433")
(defpoll weather-status :interval "600s" "~/bin/system-bar-weather status 55433")

;;(defpoll weather :interval "600s" "curl --silent 'wttr.in/?minneapolis&u&format=%c%t'")
;;(defpoll weather-status :interval "600s" "curl --silent 'wttr.in/?minneapolis&u&format=%C+%t'")

(defpoll wifi-strength :interval "2s" "nmcli -t -f SIGNAL,ACTIVE device wifi | awk -F ':' '{ if ($2 == \"yes\") print $1 }'")
(defpoll wifi-status :interval "2s" "nmcli -t -f WIFI radio")

(defpoll bt-status :interval "2s" "[[ $(cat /sys/class/bluetooth/hci0/rfkill7/state) -eq 1 ]] && printf 'enabled' || printf 'disabled'")

(defpoll time :interval "500ms" "date '+%a %Y-%m-%d %H:%M'")
(defpoll hour :interval "500ms" "date '+%I'")
(defpoll year :interval "3600s" "date '+%Y'")
(defpoll month :interval "3600s" "date '+%m'")
(defpoll day :interval "3600s" "date '+%d'")

;;------------------------------------------------------------------------------
;; Helper Widgets
;;------------------------------------------------------------------------------

(defwidget metric [label value onchange ?tooltip]
  (box :class "metric"
       :orientation "h"
       :space-evenly false
       :tooltip tooltip
       (box :class "label" label)
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

(defwidget metric-onclick [label value onchange onclick ?onrightclick ?tooltip]
  (box :class "metric"
       :orientation "h"
       :space-evenly false
       :tooltip tooltip
       (box :class "label"
            (button :onclick onclick
                    :onrightclick onrightclick
                    label))
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

(defwidget workspace [label value onclick ?tooltip]
  (box :class {value == active-desktop ? "highlight" : "label"}
       :tooltip tooltip
       (button :onclick onclick label)))

;;------------------------------------------------------------------------------
;; Item Widgets
;;------------------------------------------------------------------------------

(defwidget volume [mute volume]
  (metric-onclick
   ;; symbols: üîä Ó≠µ ÔíÖ ÔÄ¶ ÔÄß ÔÄ® Ôë¶ Û∞ïæ Û∞ïø Û∞ñÄ | üîá Û∞ñÅ
   :label {mute == "true" ? "Û∞ñÅ" : "Û∞ñÄ"}
   :value volume
   :onchange "pactl -- set-sink-volume 0 {}%"
   :onclick "pactl -- set-sink-mute 0 toggle"
   :onrightclick "pavucontrol &"
   :tooltip "Volume: ${volume}%"))

(defwidget battery [status capacity]
  (box :class "label"
       :visible {capacity == "" ? "false" : "true"}
       :tooltip "${capacity}%, ${status}"
       ;; symbols: Û∞Å∫ Û∞Åª Û∞Åº Û∞ÅΩ Û∞Åæ Û∞Åø Û∞ÇÄ Û∞ÇÅ Û∞ÇÇ Û∞Åπ Û∞ÇÜ Û∞Çá Û∞Çà Û∞Çâ Û∞Çä Û∞Çã Û∞ÇÖ Û∞ÇÑ
       (label :text {status == "Charging" && capacity < 18 ? "Û∞ÇÜ" :
              status == "Charging" && capacity < 30 ? "Û∞Çá" :
              status == "Charging" && capacity < 42 ? "Û∞Çà" :
              status == "Charging" && capacity < 54 ? "Û∞Çâ" :
              status == "Charging" && capacity < 66 ? "Û∞Çä" :
              status == "Charging" && capacity < 78 ? "Û∞Çã" :
              status == "Charging" && capacity < 90 ? "Û∞ÇÖ" :
              status == "Charging" ? "Û∞Åπ" :
              capacity < 10 ? "Û∞Å∫" :
              capacity < 20 ? "Û∞Åª" :
              capacity < 30 ? "Û∞Åº" :
              capacity < 40 ? "Û∞ÅΩ" :
              capacity < 50 ? "Û∞Åæ" :
              capacity < 60 ? "Û∞Åø" :
              capacity < 70 ? "Û∞ÇÄ" :
              capacity < 80 ? "Û∞ÇÅ" :
              capacity < 90 ? "Û∞ÇÇ" : "Û∞Åπ"})))

(defwidget wifi [status strength]
  (box :class "label"
       :visible {strength == "" ? "false" : "true"}
       :tooltip "WiFi strength: ${strength}%"
       (button :onclick {status == "enabled" ? "nmcli radio wifi off" : "nmcli radio wifi on"}
               :onrightclick "nm-connection-editor &"
               ;; symbols: Û∞§Æ Û∞§Ø Û∞§ü Û∞§¢ Û∞§• Û∞§®
               (label :text {strength == "" ? "Û∞§Æ" :
                      strength < 21 ? "Û∞§Ø" :
                      strength < 41 ? "Û∞§ü" :
                      strength < 61 ? "Û∞§¢" :
                      strength < 81 ? "Û∞§•" : "Û∞§®"}))))

(defwidget bluetooth [status]
  (box :class "label"
       :visible {status == "" ? "false" : "true"}
       :tooltip "Bluetooth status: ${status}"
       (button :onrightclick "blueman-manager &"
               ;; symbols: Û∞ÇØ Û∞Ç∞ Û∞Ç± Û∞Ç≤ Û∞Ç≥ Û∞Ç¥
               (label :text {status == "enabled" ? "Û∞ÇØ" : "Û∞Ç≤"}))))

(defwidget clock [hour time]
  (box :class "label"
       (button :onclick {calendar-is-open == "true" ?
               "${EWW_CMD} close calendar && ${EWW_CMD} update calendar-is-open=false" :
               "${EWW_CMD} open calendar && ${EWW_CMD} update calendar-is-open=true"}
               (box :class "label"
                    :orientation "h"
                    :space-evenly false
                    :spacing 5
                    ;; symbols: Û±ëä Û±êø Û±ëÄ Û±ëÅ Û±ëÇ Û±ëÉ Û±ëÑ Û±ëÖ Û±ëÜ Û±ëá Û±ëà Û±ëâ
                    (label :text {hour == "" ? "ÓôÅ " :
                           hour == "01" ? "Û±êø " :
                           hour == "02" ? "Û±ëÄ " :
                           hour == "03" ? "Û±ëÅ " :
                           hour == "04" ? "Û±ëÇ " :
                           hour == "05" ? "Û±ëÉ " :
                           hour == "06" ? "Û±ëÑ " :
                           hour == "07" ? "Û±ëÖ " :
                           hour == "08" ? "Û±ëÜ " :
                           hour == "09" ? "Û±ëá " :
                           hour == "10" ? "Û±ëà " :
                           hour == "11" ? "Û±ëâ " : "Û±ëä "})
                    (label :text "${time}")))))

