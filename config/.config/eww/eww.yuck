;;------------------------------------------------------------------------------
;; Polls
;;------------------------------------------------------------------------------

(defpoll active-desktop :interval "200ms" "bspc query -D -d --names")

(defpoll music-info :interval "1s" "~/bin/mpc-playing")

(defpoll music-state :interval "1s" "mpc | grep -q \"^\\[playing\\]\" && echo \"Ó´ì\" || echo \"Ó´ë\"")

(defpoll mute :interval "200ms" "[[ $(pamixer --get-mute) == true ]] && echo 'üîá' || echo 'üîä'")

(defpoll volume :interval "200ms" "[[ $(pamixer --get-mute) == true ]] && echo '0' || pamixer --get-volume")

(defpoll brightness :interval "200ms" "light -G | cut -c 1-2")

(defpoll weather :interval "300s" "scripts/weather 55433")

(defpoll battery :interval "1s" "scripts/battery")

(defpoll battery-capacity :interval "1s" "cat /sys/class/power_supply/BAT0/capacity")

(defpoll battery-status :interval "1s" "cat /sys/class/power_supply/BAT0/status")

(defpoll clock :interval "200ms" "scripts/clock")

;;(defpoll time :interval "200ms" "date '+%a %Y-%m-%d %H:%M'")

;;------------------------------------------------------------------------------
;; Helper Widgets
;;------------------------------------------------------------------------------

(defwidget metric-onclick [label value onchange onclick]
  (box :class "metric"
       :orientation "h"
       :space-evenly false
       (box :class "label"
            (button :onclick onclick label))
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

(defwidget metric [label value onchange]
  (box :class "metric"
       :orientation "h"
       :space-evenly false
       (box :class "label" label)
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

(defwidget workspace [label value onclick]
  (box :class {value == active-desktop ? "highlight" : "label"}
       (button :onclick onclick label)))

;;------------------------------------------------------------------------------
;; Section Widgets
;;------------------------------------------------------------------------------

(defwidget left-bar []
  (box :class "left-bar"
       :orientation "h"
       :space-evenly false
       :halign "start"
       :spacing 10
       ;; application search
       (box :class "label"
            (button :onclick "rofi -modi drun -show drun &" "Óöè "))
       ;; menu launcher
       ;; (box :class "label"
       ;;      (button :onclick "~/bin/rofi-menu" "ÔÄä "))
       ;; window selector
       (box :class "label"
            (button :onclick "rofi -modi window -show window &" "Óàº "))
       ;; symbols: ÔÑ† ÓöÉ ÔÉ∂ Óò≤ ÔÉ† ÔÇ¨ Ôâ© ÔÅº ÔÅª ÔÅµ ÔÇÜ ÔÉÉ Óò• ÔÄæ ÔÄΩ ÔÑâ ÔÑ° ÔÑ® Ôáã Ôáª ÔãÜ Ôà≥ Óòï
       (workspace :label "1 ÓöÉ " :value "1" :onclick "bspc desktop --focus '^1'")
       (workspace :label "2 Óò≤ " :value "2" :onclick "bspc desktop --focus '^2'")
       (workspace :label "3 ÔÉ† " :value "3" :onclick "bspc desktop --focus '^3'")
       (workspace :label "4 ÔÇ¨ " :value "4" :onclick "bspc desktop --focus '^4'")
       (workspace :label "5 ÔÅº " :value "5" :onclick "bspc desktop --focus '^5'")
       (workspace :label "6 ÔÅµ " :value "6" :onclick "bspc desktop --focus '^6'")
       (workspace :label "7 ÔÇÜ " :value "7" :onclick "bspc desktop --focus '^7'")
       (workspace :label "8 ÔÉÉ " :value "8" :onclick "bspc desktop --focus '^8'")
       (workspace :label "9 ÔÄæ " :value "9" :onclick "bspc desktop --focus '^9'")
       (workspace :label "10 ÔÑâ " :value "10" :onclick "bspc desktop --focus '^10'")))

(defwidget center-bar []
  (box :class "center-bar"
       :orientation "h"
       :space-evenly false
       :halign "center"
       :spacing 10
       (box :class "music-state"
            (button :onclick "mpc toggle" music-state))
       (box :class "music-info"
            (button :onclick "mpc toggle" {music-info != "" ? "${music-info}" : ""}))))

(defwidget right-bar []
  (box :class "right-bar"
       :orientation "h"
       :space-evenly false
       :halign "end"
       :spacing 10
       (box :class "label"
            (button :onclick "xdg-open http://wttr.in/san%20diego &" weather))
       (metric-onclick :label mute
                       :value volume
                       :onchange "pactl -- set-sink-volume 0 {}%"
                       :onclick "pactl -- set-sink-mute 0 toggle")
       (metric :label "ÔÇ£"
               :value brightness
               :onchange "light -S {}")
       (metric :label "Ô°ö"
               :value {EWW_RAM.used_mem_perc}
               :onchange "")
       (metric :label "ÔáÄ"
               :value {round((1 - (EWW_DISK["/"].free / EWW_DISK["/"].total)) * 100, 0)}
               :onchange "")
       (box :class "label"
            (button :onclick ""
                    :tooltip "${battery-capacity}%, ${battery-status}"
                    battery))
       (box :class "label"
            (button :onclick "" clock))))

(defwidget bar []
  (centerbox :orientation "h"
             (left-bar)
             (center-bar)
             (right-bar)))

;;------------------------------------------------------------------------------
;; Windows
;;------------------------------------------------------------------------------

(defwindow bar
  :monitor 0
  :windowtype "dock"
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "100%"
                      :height "12px"
                      :anchor "bottom center")
  :reserve (struts :side "bottom"
                   :distance "12px")
  (bar))

