;;------------------------------------------------------------------------------
;; Polls
;;------------------------------------------------------------------------------

(defpoll active-desktop :interval "500ms" "bspc query -D -d --names")

(defpoll music-info :interval "2s" "~/bin/mpc-playing")

(defpoll music-state :interval "2s" "mpc | grep -q '^\\[playing\\]' && echo 'Ó´ì' || echo 'Ó´ë'")

;;(defpoll mute :interval "500ms" "[[ $(pamixer --get-mute) == true ]] && echo 'üîá' || echo 'üîä'")
(defpoll mute :interval "500ms" "pamixer --get-mute")

(defpoll volume :interval "500ms" "[[ $(pamixer --get-mute) == true ]] && echo '0' || pamixer --get-volume")

(defpoll brightness :interval "500ms" "light -G | cut -c 1-2")

(defpoll weather :interval "600s" "scripts/weather 55433 icon")
;;(defpoll weather :interval "1800s" "curl --silent 'wttr.in/?format=%c%t'")

(defpoll weather-status :interval "600s" "scripts/weather 55433 status")
;;(defpoll weather-status :interval "1800s" "curl --silent 'wttr.in/?format=%C+%t'")

;;(defpoll battery :interval "2s" "scripts/battery")

;;(defpoll battery-capacity :interval "5s" "cat /sys/class/power_supply/BAT0/capacity")

;;(defpoll battery-status :interval "5s" "cat /sys/class/power_supply/BAT0/status")

(defpoll network-strength :interval "2s" "nmcli -t -f SIGNAL,ACTIVE device wifi | awk -F ':' '{ if ($2 == \"yes\") print $1 }'")

;;(defpoll clock :interval "500ms" "scripts/clock")

(defpoll time :interval "500ms" "date '+%a %Y-%m-%d %H:%M'")

(defpoll min :interval "500ms" "date '+%M'")

;;------------------------------------------------------------------------------
;; Helper Widgets
;;------------------------------------------------------------------------------

(defwidget metric [label value onchange ?tooltip]
  (box :class "metric"
       :orientation "h"
       :space-evenly false
       :tooltip tooltip
       (box :class "label" label)
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

(defwidget metric-onclick [label value onchange onclick ?tooltip]
  (box :class "metric"
       :orientation "h"
       :space-evenly false
       :tooltip tooltip
       (box :class "label"
            (button :onclick onclick label))
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

(defwidget workspace [label value onclick ?tooltip]
  (box :class {value == active-desktop ? "highlight" : "label"}
       :tooltip tooltip
       (button :onclick onclick label)))

;;------------------------------------------------------------------------------
;; Item Widgets
;;------------------------------------------------------------------------------

(defwidget volume [mute volume]
  (metric-onclick
   :label {mute == "true" ? "üîá" : "üîä"}
   :value volume
   :onchange "pactl -- set-sink-volume 0 {}%"
   :onclick "pactl -- set-sink-mute 0 toggle"
   :tooltip "Volume: ${volume}%"))

(defwidget battery [capacity status]
  (box :class "label"
       :tooltip "${capacity}%, ${status}"
       ;; symbols: Û∞ÇÑ Û∞Å∫ Û∞Åª Û∞Åº Û∞ÅΩ Û∞Åæ Û∞Åø Û∞ÇÄ Û∞ÇÅ Û∞ÇÇ Û∞Åπ
       (label :text {status == "Charging" ? "Û∞ÇÑ" :
              capacity < 10 ? "Û∞Å∫" :
              capacity < 20 ? "Û∞Åª" :
              capacity < 30 ? "Û∞Åº" :
              capacity < 40 ? "Û∞ÅΩ" :
              capacity < 50 ? "Û∞Åæ" :
              capacity < 60 ? "Û∞Åø" :
              capacity < 70 ? "Û∞ÇÄ" :
              capacity < 80 ? "Û∞ÇÅ" :
              capacity < 90 ? "Û∞ÇÇ" : "Û∞Åπ"})))

(defwidget network [strength]
  (box :class "label"
       :tooltip "Network strength: ${strength}%"
       ;; symbols: Û∞§Æ Û∞§Ø Û∞§ü Û∞§¢ Û∞§• Û∞§®
       (button :onclick "nm-connection-editor &"
               (label :text {strength == "" ? "?" :
                      strength < 21 ? "Û∞§Ø" :
                      strength < 41 ? "Û∞§ü" :
                      strength < 61 ? "Û∞§¢" :
                      strength < 81 ? "Û∞§•" :  "Û∞§®"}))))

(defwidget clock [min time]
  (box :class "label"
       (button :onclick ""
               ;; symbols: Û±ëä Û±êø Û±ëÄ Û±ëÅ Û±ëÇ Û±ëÉ Û±ëÑ Û±ëÖ Û±ëÜ Û±ëá Û±ëà Û±ëâ
               (label :text {min == "" ? "Û±ëÇ" :
                      min < 5 ? "Û±ëä" :
                      min < 10 ? "Û±êø" :
                      min < 15 ? "Û±ëÄ" :
                      min < 20 ? "Û±ëÅ" :
                      min < 25 ? "Û±ëÇ" :
                      min < 30 ? "Û±ëÉ" :
                      min < 35 ? "Û±ëÑ" :
                      min < 40 ? "Û±ëÖ" :
                      min < 45 ? "Û±ëÜ" :
                      min < 50 ? "Û±ëá" :
                      min < 55 ? "Û±ëà" : "Û±ëâ"} "${time}")
               )))

