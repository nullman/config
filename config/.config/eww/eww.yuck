(defwidget center-bar []
  (box :class "center-bar"
       :orientation "h"
       :space-evenly false
       :halign "center"
       :spacing 10
       (box :class "music-state"
            (button :onclick "mpc toggle" music-state))
       (box :class "music-info"
            (button :onclick "mpc toggle" {music-info != "" ? "${music-info}" : ""}))))

(defwidget right-bar []
  (box :class "right-bar"
       :orientation "h"
       :space-evenly false
       :halign "end"
       :spacing 10
       (box :class "label"
            :tooltip weather-status
            (button :onclick "curl --silent wttr.in | head -n -2 | sed 's/\\x1B\\[[0-9;]*[a-zA-Z]//g' | yad --text-info --width=1138 --height=760 --no-buttons"
                    weather))
       (volume :mute mute
               :volume volume)
       (metric :label "ÔÇ£"
               :value brightness
               :onchange "light -S {}"
               :tooltip "Brightness: ${brightness}%")
       (metric :label "Ô°ö"
               :value {EWW_RAM.used_mem_perc}
               :onchange ""
               :tooltip "RAM Used: ${EWW_RAM.used_mem_perc}%")
       (metric :label "Û∞Üº"
               :value {round((1 - (EWW_DISK["/"].free / EWW_DISK["/"].total)) * 100, 0)}
               :onchange ""
               :tooltip "Disk Used: ${round((1 - (EWW_DISK["/"].free / EWW_DISK["/"].total)) * 100, 0)}%")
       ;; (box :class "label"
       ;;      :tooltip "${battery-capacity}%, ${battery-status}"
       ;;      battery)
       (battery :capacity {EWW_BATTERY.BAT0.capacity}
                :status {EWW_BATTERY.BAT0.status})
       (network :strength network-strength)
       (clock :min min
              :time time)))
       ;; (box :class "label"
       ;;      (button :onclick "" clock))))

(defwidget bar []
  (centerbox :orientation "h"
             (left-bar)
             (center-bar)
             (right-bar)))

;;------------------------------------------------------------------------------
;; Windows
;;------------------------------------------------------------------------------

(defwindow bar
  :monitor 0
  :windowtype "dock"
  ;;:stacking "bg"
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "100%"
                      :height "12px"
                      :anchor "bottom center")
  :reserve (struts :side "bottom"
                   :distance "12px")
  (bar))

