(defwidget metric-onclick [label value onchange onclick]
  (box :orientation "h"
       :class "metric"
       :space-evenly false
       (box :class "label"
            (button :onclick onclick label))
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

(defwidget metric [label value onchange]
  (box :orientation "h"
       :class "metric"
       :space-evenly false
       (box :class "label" label)
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

