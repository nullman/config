;; Windows
;;------------------------------------------------------------------------------

(defwindow calendar
  :windowtype "dock"
  :stacking "fg"
  :geometry (geometry :x "-10px"
                      :y "-30px"
                      :width "500px"
                      :height "220px"
                      :anchor "bottom right")
  (box :class "bar"
       :orientation "h"
       :valign "fill"
       :halign "fill"
       (calendar :year year
                 :month month
                 :day day
                 :show-details "true"
                 :show-heading "true"
                 :show-day-names "true"
                 :onclick "remind ~/.reminders $(date -d {2}-$(({1}+1))-{0} '+%_d %b %Y') | fold -w 80 -s | yad --text-info --width=800 --height=600 --no-buttons")))

