;;------------------------------------------------------------------------------
;; Polls
;;------------------------------------------------------------------------------

(defpoll active-desktop :interval "500ms" "bspc query -D -d --names")

(defpoll music-info :interval "2s" "~/bin/mpc-playing")
(defpoll music-state :interval "2s" "mpc | grep -q '^\\[playing\\]' && echo 'Ó´ì' || echo 'Ó´ë'")

(defpoll mute :interval "500ms" "pamixer --get-mute")
(defpoll volume :interval "500ms" "[[ $(pamixer --get-mute) == true ]] && echo '0' || pamixer --get-volume")
(defpoll brightness :interval "500ms" "light -G | cut -c 1-2")

;;(defpoll weather :interval "600s" "scripts/weather 55433 icon")
;;(defpoll weather-status :interval "600s" "scripts/weather 55433 status")

(defpoll weather :interval "600s" "curl --silent 'wttr.in/?format=%c%t'")
(defpoll weather-status :interval "600s" "curl --silent 'wttr.in/?format=%C+%t'")

(defpoll wifi-strength :interval "2s" "nmcli -t -f SIGNAL,ACTIVE device wifi | awk -F ':' '{ if ($2 == \"yes\") print $1 }'")
(defpoll wifi-status :interval "2s" "nmcli -t -f WIFI radio")

(defpoll bt-status :interval "2s" "[[ $(cat /sys/class/bluetooth/hci0/rfkill7/state) -eq 1 ]] && printf 'enabled' || printf 'disabled'")

(defpoll time :interval "500ms" "date '+%a %Y-%m-%d %H:%M'")
(defpoll min :interval "500ms" "date '+%M'")

;;------------------------------------------------------------------------------
;; Helper Widgets
;;------------------------------------------------------------------------------

(defwidget metric [label value onchange ?tooltip]
  (box :class "metric"
       :orientation "h"
       :space-evenly false
       :tooltip tooltip
       (box :class "label" label)
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

(defwidget metric-onclick [label value onchange onclick ?onrightclick ?tooltip]
  (box :class "metric"
       :orientation "h"
       :space-evenly false
       :tooltip tooltip
       (box :class "label"
            (button :onclick onclick
                    :onrightclick onrightclick
                    label))
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

(defwidget workspace [label value onclick ?tooltip]
  (box :class {value == active-desktop ? "highlight" : "label"}
       :tooltip tooltip
       (button :onclick onclick label)))

;;------------------------------------------------------------------------------
;; Item Widgets
;;------------------------------------------------------------------------------

(defwidget volume [mute volume]
  (metric-onclick
   :label {mute == "true" ? "üîá" : "üîä"}
   :value volume
   :onchange "pactl -- set-sink-volume 0 {}%"
   :onclick "pactl -- set-sink-mute 0 toggle"
   :onrightclick "pavucontrol &"
   :tooltip "Volume: ${volume}%"))

