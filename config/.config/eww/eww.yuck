(defpoll active-desktop :interval "200ms" "bspc query -D -d --names")

(defpoll music-info :interval "1s" "~/bin/mpc-playing")

(defpoll music-state :interval "1s" "mpc | grep -q \"^\\[playing\\]\" && echo \"Ó´ì\" || echo \"Ó´ë\"")

(defpoll mute :interval "200ms" "[[ $(pamixer --get-mute) == true ]] && echo 'üîá' || echo 'üîä'")

(defpoll volume :interval "200ms" "[[ $(pamixer --get-mute) == true ]] && echo '0' || pamixer --get-volume")

(defpoll brightness :interval "200ms" "light -G | cut -c 1-2")

(defpoll time :interval "200ms" "date '+%a %Y-%m-%d %H:%M'")

(defwidget metric-onclick [label value onchange onclick]
  (box :class "metric"
       :orientation "h"
       :space-evenly false
       (box :class "label"
            (button :onclick onclick label))
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

(defwidget metric [label value onchange]
  (box :class "metric"
       :orientation "h"
       :space-evenly false
       (box :class "label" label)
       (scale :min 0
              :max 101
              :active {onchange != ""}
              :value value
              :onchange onchange)))

(defwidget workspace [label value onclick]
  (box :class {value == active-desktop ? "highlight" : "label"}
       (button :onclick onclick label)))

(defwidget workspaces []
  (box :class "workspaces"
       :orientation "h"
       :space-evenly true
       :halign "start"
       :spacing 4
       ;; symbols: ÔÑ† ÔÉ∂ ÔÉ† ÔÇ¨ Ôâ© ÔÅº ÔÅª ÔÅµ ÔÇÜ ÔÉÉ ÔÄæ ÔÄΩ ÔÑâ ÔÑ° ÔÑ® Ôáã Ôáª ÔãÜ Ôà≥
       (workspace :label "1 ÔÑ† " :value "1" :onclick "wmctrl -s 0")
       (workspace :label "2 ÔÉ∂ " :value "2" :onclick "vmctrl -s 1")
       (workspace :label "3 ÔÉ† " :value "3" :onclick "vmctrl -s 2")
       (workspace :label "4 ÔÇ¨ " :value "4" :onclick "vmctrl -s 3")
       (workspace :label "5 ÔÅº " :value "5" :onclick "vmctrl -s 4")
       (workspace :label "6 ÔÅµ " :value "6" :onclick "vmctrl -s 5")
       (workspace :label "7 ÔÇÜ " :value "7" :onclick "vmctrl -s 6")
       (workspace :label "8 ÔÉÉ " :value "8" :onclick "vmctrl -s 7")
       (workspace :label "9 ÔÄæ " :value "9" :onclick "vmctrl -s 8")
       (workspace :label "10 ÔÑâ " :value "10" :onclick "vmctrl -s 9")))

(defwidget music []
  (box :class "music"
       :orientation "h"
       :space-evenly false
       :halign "center"
       :spacing 10
       (box :class "music-state"
            (button :onclick "mpc toggle" music-state))
       (box :class "music-info"
            (button :onclick "mpc toggle" {music-info != "" ? "${music-info}" : ""}))))

(defwidget status []
  (box :class "status"
       :orientation "h"
       :space-evenly false
       :halign "end"
       (metric-onclick :label mute
                       :value volume
                       :onchange "pactl -- set-sink-volume 0 {}%"
                       :onclick "pactl -- set-sink-mute 0 toggle")
       (metric :label "üîÖ"
               :value brightness
               :onchange "light -S {}")
       (metric :label "Ô°ö"
               :value {EWW_RAM.used_mem_perc}
               :onchange "")
       (metric :label "üíæ"
               :value {round((1 - (EWW_DISK["/"].free / EWW_DISK["/"].total)) * 100, 0)}
               :onchange "")
       time))

(defwidget bar []
  (centerbox :orientation "h"
             (workspaces)
             (music)
             (status)))

(defwindow bar
  :monitor 0
  :windowtype "dock"
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "100%"
                      :height "12px"
                      :anchor "bottom center")
  :reserve (struts :side "bottom"
                   :distance "12px")
  (bar))
