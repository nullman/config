#===============================================================================
# .config/systemd/user/barrier.service
#
# Configuration for systemd user barrier service.
#
# Enable:   systemctl --user enable barrier.service
# Start:    systemctl --user start barrier.service
# Stop:     systemctl --user stop barrier.service
# Disable:  systemctl --user disable barrier.service
#
# Reference: https://wiki.archlinux.org/index.php/Systemd/User
#===============================================================================

[Unit]
Description=Barrier (barrier)
After=network.target

[Service]
#ExecStart=/bin/sh -c 'exec /usr/bin/barrierc --no-daemon --debug INFO --enable-crypto --enable-drag-drop [dozer]:24800 </dev/zero'
#ExecStart=/usr/sbin/barrier
ExecStart=barrierc --no-daemon --debug INFO --enable-crypto --config ${HOME}/.barrier.conf
Restart=always
RestartSec=10

[Install]
WantedBy=default.target

